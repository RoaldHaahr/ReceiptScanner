    <div class="row">
        <nav class="nav-menu col s12">
            <ul>
                <li>
                    <div class="input-field file">
                        <a class="btn-small" href="#">Gem kvittering</a>
                        <input type="file" accept="image/*" class="js-receipt-upload" />
                    </div>
                </li>
