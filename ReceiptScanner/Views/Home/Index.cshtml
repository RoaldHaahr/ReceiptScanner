@{
    ViewBag.Title = "Home Page";
}

@section Scripts {
    <script type="text/javascript" src="~/Scripts/scan.js"></script>
}

    <div class="row">
        <nav class="nav-menu col s12">
            <ul>
                <li>
                    <div class="input-field file">
                        <a class="btn-small" href="#">Gem kvittering</a>
                        <input type="file" accept="image/*" class="js-receipt-upload" />
                    </div>
                </li>
                <li>
                    <a class="btn-small" href="overview.html">Oversigt</a>
                </li>
                <li>
                    <a class="btn-small" href="#">Tilbud</a>
                </li>
                <li>
                    <a class="btn-small" href="#">Indstillinger</a>
                </li>
            </ul>
        </nav>
        <form action="@Url.Action("Save", "Receipt")" method="post" accept-charset="utf-8" class="receipt-information save col s12">
            <input type="text" name="Base64_Image" id="js-input-base64" hidden/>
            <img src="" class="receipt-preview" alt="">
            <div>
                <div class="input-field text inputjs">
                    <input type="text" name="Name">
                    <label for="Name">Navn</label>
                </div>
                <div class="input-field text inputjs">
                    <input type="text" name="Category">
                    <label for="Category">Kategori</label>
                </div>
                <div class="total-price">
                    <div class="input-field number inputjs">
                        <input type="number" name="Price" step="0.01">
                        <label for="Price">Total pris</label>
                    </div>
                    <div class="input-field select inputjs">
                        <select name="Currency_Id">
                            <option value="DKK" selected>DKK</option>
                        </select>
                        <label for="Currency_Id">Valuta</label>
                    </div>
                </div>
                <div class="input-field date inputjs">
                    <input type="date" name="Date">
                    <label for="Date">Dato</label>
                </div>
                <div class="input-field textarea inputjs">
                    <textarea name="Notes" rows="3" cols="30"></textarea>
                    <label for="Notes">Noter</label>
                </div>
                <div class="input-field textarea inputjs">
                    <textarea name="ContentPreview" rows="3" cols="30" disabled></textarea>
                    <input type="hidden" name="Content"/>
                    <label for="Content">Indhold</label>
                </div>
                <div class="input-field submit">
                    <input type="submit" value="Gem">
                </div>
            </div>

        </form>
        <canvas id="c" class="col12"></canvas>
        <img src="" id="prev" alt="">
        <img src="" id="prevRotated" alt="">
    </div>